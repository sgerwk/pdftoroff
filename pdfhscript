#!/bin/sh
#
# external script for hovacui
#
# l: show annotation and actions in the current page in a browser
# s: save the document

# save parameters

if false;
then
	echo "1: >>>$1<<<" >> hovacui-out.txt
	echo "2: >>>$2<<<" >> hovacui-out.txt
	echo "3: >>>$3<<<" >> hovacui-out.txt
	echo "4: >>>$4<<<" >> hovacui-out.txt
	echo "5: >>>$5<<<" >> hovacui-out.txt
	echo "6: >>>$6<<<" >> hovacui-out.txt
	echo "7: >>>$7<<<" >> hovacui-out.txt
	echo "8: >>>$8<<<" >> hovacui-out.txt
fi

# composite commands

[ "$1" = 'A' ] && EDIT=true
[ "$1" = 'N' ] && EDIT=true
[ "$1" = 'E' ] && EDIT=true
$EDIT false && [ "$8" != "[]" ] && YANK=true
[ "$1" = 'y' ] && YANK=true && COPIED=true

# common variables

CACHEFILE="$HOME/.cache/hovacui/$2"
TEMPFILE="$HOME/.cache/hovacui/temp"

# test

if [ "$1" = '0' ];
then
	echo -n "test: "
	if [ ! -f $CACHEFILE ];
	then
		echo -n "no cache file"
		exit
	fi
	cat $CACHEFILE >> hovacui-out.txt

	P=$(head -1 $CACHEFILE)
	N=$(echo $P | cut -d' ' -f1)
	echo "$((N+1)) 0 0 0"    > $TEMPFILE
	# echo "$((N-1)) 0 0 0"  > $TEMPFILE
	# echo "0 -100 0 0"      > $TEMPFILE
	tail +2 $CACHEFILE      >> $TEMPFILE
	mv $TEMPFILE $CACHEFILE
	echo -n "done"
fi

# links in page

if [ "$1" = 'l' ];
then
	pdfannot -w -d "$3" $4 > hovacui-out.html
	[ $? = 0 ] && rm hovacui-out.html && echo -n "no links in page" && exit

	if [ "$DISPLAY" = "" ];
	then
		elinks -remote 'openUrl(hovacui-out.html,new-tab)' \
			> /dev/null 2>&1
		[ $? != 0 ] && echo -n "elinks not running" && exit
		elinks -remote 'reload()'
		echo -n "passed links to elinks"
		exit
	fi

	if [ "$BROWSER" != "" ];
	then
		$BROWSER hovacui-out.html
		echo -n "passed links to $BROWSER"
		exit
	fi

	echo -n "no browser available"
fi

# save a copy of the document

if [ "$1" = 's' ];
then
	I=1
	while [ -e selection-$I.pdf ];
	do
		I=$((I+1))
	done

	cp "$3" selection-$I.pdf
	echo -n "saved as selection-$I.pdf"
fi

# copy text in page or rectangle for pasting

if $YANK false;
then
	if [ "$8" != "[]" ];
	then
		BOX="-b $8"
	else
		T=$(echo $6 | tr - , | tr -d '[]')
		TX1=$(echo $T | cut -d, -f1 | cut -d. -f1)
		TY1=$(echo $T | cut -d, -f2 | cut -d. -f1)
		TX2=$(echo $T | cut -d, -f3 | cut -d. -f1)
		TY2=$(echo $T | cut -d, -f4 | cut -d. -f1)
		D=$(echo $7 | tr - , | tr -d '[]')
		DX1=$(echo $D | cut -d, -f1 | cut -d. -f1)
		DY1=$(echo $D | cut -d, -f2 | cut -d. -f1)
		DX2=$(echo $D | cut -d, -f3 | cut -d. -f1)
		DY2=$(echo $D | cut -d, -f4 | cut -d. -f1)
		BOX="-b ["
		BOX=$BOX$([ $TX1 -gt $DX1 ] && echo $TX1 || echo $DX1),
		BOX=$BOX$([ $TY1 -gt $DY1 ] && echo $TY1 || echo $DY1)-
		BOX=$BOX$([ $TX2 -lt $DX2 ] && echo $TX2 || echo $DX2),
		BOX=$BOX$([ $TY2 -lt $DY2 ] && echo $TY2 || echo $DY2)]
	fi
	# pdftoroff -t -i $4:$4 $BOX "$3" | sed '/./,$ ! d' >> hovacui-out.txt
	{
		pdftoroff -t -i $4:$4 $BOX "$3" | \
		sed '/./,$ ! d' | $COPIER 2>&1;
		[ "$?" = 0 ] && $COPIED && echo -n "text copied";
	} | tr '\n' ' '
fi

# edit the notes of the pdf file

if $EDIT false;
then
	BASE=$(echo "$3" | sed -e 's,.pdf,,' -e 's,$,-notes.txt,')

	[ "$1" = 'N' ] && CHECK=true
	[ "$1" = 'E' ] && CHECK=true

	if [ -e "$BASE" ];
	then
		if ! [ -f "$BASE" ];
		then
			echo -n "$BASE is not a regular file"
			exit 1
		fi
		if $CHECK false && \
		   grep -A2 "^## Page $4$" "$BASE" | tail -2 | grep -q "^##";
		then
			echo -n "no notes for page $4, next: "
			sed '
			: begin
				/\n##/	{ P; D; b }
					s,\n, ,g
					N
					b begin
			' "$BASE"					| \
			sed -n "/^## Page $4 /,$ p"			| \
			{ grep -m1 '## Page [0-9]* .' || echo '  none'; } | \
			cut -d' ' -f3					| \
			tr -d '\n'
			exit 1
		fi
	else
		if $CHECK false;
		then
			echo -n "no notes for page $4"
			exit 1
		fi
		echo "# $(basename "$3")" > "$BASE"
		echo >> "$BASE"
		for P in $(seq 1 $5);
		do
			echo "## Page $P" >> "$BASE"
			echo >> "$BASE"
		done
		echo '## End' >> "$BASE"
	fi

	if $EDIT false;
	then
		LINEFILE=$HOME/.cache/hovacui/line
		rm -f $FILEFILE
		vi +"/## Page $4$" "$BASE" < /dev/tty > /dev/tty 2> /dev/tty
		setterm --cursor off > /dev/tty
		if [ -f $LINEFILE ];
		then
			# requires, in .vimrc:
			# autocmd BufUnload *-notes.txt execute ''
			#   \| execute '!echo ' . line('.') . ' >
			#      $HOME/.cache/hovacui/line'
			L=$(<$LINEFILE)
			N=$(head -$L "$BASE" | grep '^## Page [0-9][0-9]*' | \
			    tail -1 | cut -d' ' -f3)
			[ "$N" = '' ] && N=1
			sed -i "1 s,^[0-9]* ,$((N-1)) ," $CACHEFILE
			rm $LINEFILE
		fi

	else
		echo -n "notes for page $4"
	fi
fi

